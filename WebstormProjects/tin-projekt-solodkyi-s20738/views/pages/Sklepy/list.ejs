                    <a href="/skleps/delete/<%=sklep.id_sklep%>" onclick="function myFunction() {
                       alert('Rekord zostal usunienty');
                        }
                        myFunction()" class="list-actions-button-delete" ><%= __('list.actions.delete')%></a>

            </ul></td>
        </tr>
<%} %>
        </tbody>
    </table>

    <p><a href="/skleps/add" class="button-add"><%= __('shop.fields.list.addNew')%></a></p>
<%- include('../../fragments/footer.ejs') %>