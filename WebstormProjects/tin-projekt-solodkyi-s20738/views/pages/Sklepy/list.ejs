<%- include('../../fragments/header.ejs') %>
<main>

    <h2>
        <b><%=__('shop.fields.list.pageTitle')%></b>
    </h2>
    <table class="tabele-list">
        <thread>
            <tr>
                <th><%= __('shop.fields.adres')%></th>
                <th><%= __('shop.fields.data')%></th>
                <th><%= __('list.actions.title') %></th>
            </tr>
        </thread>
        <tbody>
        <% for (let sklep of skleps) { %>
            <tr>
                <td><%= sklep.Adresa%></td>
                <td><%= sklep.Data_otwarcia.toISOString().split('T')[0]%></td>
