<%- include('../../fragments/header.ejs') %>
<main>

    <h2>
        <b>Lista Sklepow</b>
    </h2>
    <table class="tabele-list">
        <thread>
            <tr>
                <th>Adres</th>
                <th>Data otwarcia</th>
                <th>Akcje</th>
            </tr>
        </thread>
        <tbody>
        <% for (let sklep of skleps) { %>
            <tr>
                <td><%= sklep.Adresa%></td>
                <td><%= sklep.Data_otwarcia.toISOString().split('T')[0]%></td>
                <td>
                <ul>
                    <a href="/skleps/details/<%=sklep.id_sklep%>" class="list-actions-button-details">Szczegoly</a>
                    <a href="/skleps/edit/<%=sklep.id_sklep%>" class="list-actions-button-edit"> Edytuj</a>
                    <a href="/skleps/delete/<%=sklep.id_sklep%>" onclick="function myFunction() {
                       alert('Rekord zostal usunienty');
                        }
                        myFunction()" class="list-actions-button-delete" >Usuń</a>

            </ul></td>
        </tr>
<%} %>
        </tbody>
    </table>

    <p><a href="/skleps/add" class="button-add">Dodać nowego klienta</a></p>
<%- include('../../fragments/footer.ejs') %>