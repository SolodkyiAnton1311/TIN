<%- include('./fragments/header.ejs') %>
<main>
    <%if(!loggedUser){%>
    <div id = "login">
        <h5>Logowanie</h5>
        <form method="post" action="/login" novalidate>
            <label for="email">email</label>
            <input type="text" id="email" name="email">

            <label for="loginPassword">Haslo</label>
            <input type="password" id="password" name="password">
            <input type="submit" value="Zaloguj sie">
            <span id="loginError"><%= loginError?loginError:''%></span>
        </form>
    </div>
    <%}else {%>
        <span>Jestes zalogowany jako :<%=loggedUser.email + " " + loggedUser.password%></span>
        <a href="/logout">Wyloguj sie</a>
    <%}%>
    <h2>Strona Glowna</h2>
    <p><%= __('main-page.content') %></p>
</main>
<%- include('./fragments/footer.ejs') %>
